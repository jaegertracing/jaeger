{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":gitSignOff"
  ],
  "labels": [
    "changelog:dependencies"
  ],
  "suppressNotifications": ["prEditedNotification"],
  "packageRules": [
    {
      "matchFileNames": [
        "docker-compose/**/v*/docker-compose.yaml",
        "docker-compose/**/v*/docker-compose.yml"
      ],
      "matchUpdateTypes": ["major"],
      "enabled": false
    }
  ]
}
