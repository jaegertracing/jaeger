# percli describe gdts prometheus -o json | jq
{
  "kind": "GlobalDatasource",
  "metadata": {
    "name": "prometheus",
    "createdAt": "2024-11-01T10:31:22.358795716Z",
    "updatedAt": "2024-11-01T10:31:22.358795716Z",
    "version": 0
  },
  "spec": {
    "default": true,
    "plugin": {
