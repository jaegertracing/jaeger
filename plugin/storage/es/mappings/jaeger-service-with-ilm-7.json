{
  "index_patterns": "*jaeger-service-*",
  "order": 1,
  "aliases": {
    "${__INDEX_READ_ALIAS__}": {}
  },
  "settings": {
    "index.number_of_shards": ${__NUMBER_OF_SHARDS__},
    "index.number_of_replicas": ${__NUMBER_OF_REPLICAS__},
    "index.mapping.nested_fields.limit": 50,
    "index.requests.cache.enable": true,
    "lifecycle": {
      "name": "jaeger",
      "rollover_alias": "${__INDEX_WRITE_ALIAS__}"
    }
  },
  "mappings": {
    "dynamic_templates": [
      {
        "span_tags_map": {
          "mapping": {
            "type": "keyword",
            "ignore_above": 256
          },
          "path_match": "tag.*"
        }
      },
      {
        "process_tags_map": {
          "mapping": {
            "type": "keyword",
            "ignore_above": 256
          },
          "path_match": "process.tag.*"
        }
      }
    ],
    "properties": {
      "serviceName": {
        "type": "keyword",
        "ignore_above": 256
      },
      "operationName": {
        "type": "keyword",
        "ignore_above": 256
      }
    }
  }
}